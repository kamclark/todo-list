@{
    ViewData["Title"] = "Home Page";
}

<br/>

<div class="alert alert-info" role="alert">Testing.....</div>
<div class="row">
    <div class="col-md-12">
        <h1>Your Agenda</h1>
        <h4>What do you have going on this @DateTime.Now.ToString("dddd")?</h4>
    </div>        
</div>

<div class="row">        
    <div class="col-md-12">
                <div class="btn-group float-md-left pb-2"> @*padding from bottom for menu not to touch table*@
                    
                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">File</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">New</a>
                        <a class="dropdown-item" href="#">Help</a>
                    </div>
                </div>


                <button type="button" class="btn btn-primary float-md-right" data-toggle="modal" data-target="#newTaskModal">Add Task</button>

                <!-- Modal -->
                <div class="modal fade" id="newTaskModal" tabindex="-1" role="dialog" aria-labelledby="newTaskModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="newTaskModalLabel">New Task</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="newTaskTitle">Title</label>
                                        <input type="text" class="form-control" id="newTaskTitle" aria-describedby="titleHelp" placeholder="e.g: Grab Groceries">
                                        <small id="titleHelp" class="form-text text-muted">Can't be blank.</small>
                                    </div>

                                    <div class="form-group">
                                        <label for="newTaskMemo">Memo</label>
                                        <input type="text" class="form-control" id="newTaskMemo" aria-describedby="memoHelp" placeholder="Description....">
                                        <small id="memoHelp" class="form-text text-muted"></small>
                                    </div>

                                    <div class="form-group">
                                        <label for="newTaskPriority">Priority</label>
                                        <select class="form-control" aria-describedby="priorityHelp">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                        </select>
                                        <small id="priorityHelp" class="form-text text-muted">Lowest to Highest.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </form>
                            </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>


                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Icon</th>
                            <th>Priority</th>
                            <th>Title</th>
                            <th>Memo</th>
                            <th>Completed</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><i class="far fa-address-card"></i></td>
                            <td>1</td>
                            <td>Meeting at Universal</td>
                            <td>Don't wear that ugly suit</td>
                            <td><i class="far fa-check-square"></i></td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-baseball-ball"></i></td>
                            <td>2</td>
                            <td>Softball</td>
                            <td>Bring glove</td>
                            <td><i class="far fa-times-circle"></i></td>
                        </tr>
                        <tr>
                            <td><i class="fab fa-aws"></i></td>
                            <td>3</td>
                            <td>AWS Course</td>
                            <td>STUDY!</td>
                            <td><i class="far fa-times-circle"></i></td>
                        </tr>
                    </tbody>
                </table>
        </div>